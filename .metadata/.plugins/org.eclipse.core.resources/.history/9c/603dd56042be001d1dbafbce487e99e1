package sec1;

public class Example2 {

	public static void main(String[] args) {
		// 대입연산자
		int a = 10;
		int b = 15;
		
		System.out.println("a="+a);
		System.out.println("b="+b);
		
		a+=3;		//a=a+3
		b-=3;		//b=b-3
		System.out.println("a="+a);
		System.out.println("b="+b);
		
		a*=3;		//a=a*3
		b/=3;		//b=b/3
		System.out.println("a="+a);
		System.out.println("b="+b);
		a%=2;		//a=a/2의 나머지
		System.out.println("a="+a);
		
		int c = 40;
		int d = 40;
		
		c>>=2;		//2진수 오른쪽으로 두번
		d<<=2;		//2진수 왼쪽으로 두번
		System.out.println("c="+c);
		System.out.println("d="+d);
		
	}
}