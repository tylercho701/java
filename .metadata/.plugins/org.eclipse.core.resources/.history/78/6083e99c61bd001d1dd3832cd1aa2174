package sec3;

public class Example3 {

	public static void main(String[] args) {
		// 
		int kor1, eng1, mat1;
		int kor2, eng2, mat2;
		int kor3, eng3, mat3;
		int tot1, tot2, tot3;
		double avg1, avg2, avg3;
		
		kor1 = 100;	eng1 = 92;	mat1 = 79;
		kor2 = 98;	eng2 = 98;	mat2 = 95;
		kor3 = 83;	eng3 = 99;	mat3 = 97;
		tot1 = kor1 + eng1 + mat1;
		tot2 = kor2 + eng2 + mat2;
		tot3 = kor3 + eng3 + mat3;
		avg1 = tot1 / 3.0f;
		avg2 = tot2 / 3.0f;
		avg3 = tot3 / 3.0f;
		
		System.out.println("번호\t국어\t영어\t수학\t총점\t평균");
		System.out.printf("%3d\t%3d\t%3d\t%3d\t%3d\t%5.2f\t", 1, kor1, eng1, mat1, tot1, avg1);

	}
}