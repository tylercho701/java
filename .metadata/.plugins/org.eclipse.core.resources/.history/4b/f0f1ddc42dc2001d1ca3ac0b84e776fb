package sec2;

public class Example1 {

	public static void main(String[] args) {
		// 반복실행문
		// for(초기화; 조건식(=반복기간); 증감식){
		int i;
		int tot = 0;
		
		
		// 기본 for문
		for (i=0; i<=100; i++){
			tot = tot + i;
		}
		System.out.println(tot);
		
		
		// for문 + if문
		tot = 0;
		for (i=0; i<=100; i++){
			if (i <= 100){
				tot = tot + i;
			}
		}
		System.out.println(tot);
		
		
		// 짝수일때만
		tot = 0;
		
		for (i=0; i<=100; i+=2){
			tot = tot + i;
		}
		System.out.println(tot);
		
		
		// 짝수일때만 + if 문
		tot = 0;
		
		for (i=0; i<=100; i++){
			if (tot % 2 == 0){
			tot = tot + i;
		}
		}
		System.out.println(tot);
		
		
		// 3의 배수일 때만
		tot = 0;
		
		for (i=1; i<=100; i+=3){
			tot = tot + i;
		}
		System.out.println(tot);
	}
}