package sec5;

import java.util.Arrays;
import java.util.Random;

public class RandonEx1 {

	public static void main(String[] args) {
		// 로또 복권 랜덤 발생기 : 1~45 아무거나 6개
		int[] lotto = new int[6];
		
		for(int i=0; i<6; i++){
			lotto1[i] = (int) (Math.random()*45)+1;
			System.out.print(lotto[i]+" ");
		}
		System.out.println();
		
		Random ran = new Random();
		for(int i=0; i<6; i++){
			lotto2[i] = ran.nextInt(45)+1;
			System.out.print(lotto[i]+" ");
		}
		System.out.println();
		
		Arrays.sort(lotto);
		for(int i=0; i<6; i++){
			lotto3[i] = ran.nextInt(45)+1;
			System.out.print(lotto[i]+" ");
		}
		System.out.println();
		
		int[] arr = { 6, 8, 11, 14, 36, 42 };
		if(Arrays.equals(arr, lotto3)){
			System.out.println("당첨 !");
		} else {
			System.out.println("꽝 .. ");
		}
	}
}